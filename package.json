{
  "name": "tiny-deep-merge",
  "version": "1.0.6",
  "description": "A utility to deeply merge multiple plain objects. Zero dependencies.",
  "keywords": [
    "merge",
    "deep merge",
    "deepmerge",
    "object merge",
    "typescript",
    "utility",
    "object",
    "tiny",
    "lightweight",
    "fast",
    "zero dependency",
    "esm",
    "cjs",
    "js",
    "ts",
    "minimal",
    "lite"
  ],
  "homepage": "https://github.com/john-james-gh/tiny-deep-merge#readme",
  "bugs": {
    "url": "https://github.com/john-james-gh/tiny-deep-merge/issues"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/john-james-gh/tiny-deep-merge.git"
  },
  "license": "MIT",
  "author": "John James",
  "contributors": [
    {
      "name": "John James",
      "url": "https://github.com/john-james-gh"
    }
  ],
  "sideEffects": false,
  "exports": {
    ".": {
      "import": "./dist/index.js",
      "require": "./dist/index.js"
    }
  },
  "main": "./dist/index.js",
  "module": "./dist/index.mjs",
  "types": "./dist/index.d.ts",
  "files": [
    "dist",
    "README.md",
    "LICENSE"
  ],
  "scripts": {
    "build": "tsup",
    "dev": "tsup --watch",
    "format": "prettier --write .",
    "lint": "eslint .",
    "prepublishOnly": "npm run build",
    "size": "size-limit",
    "sort": "sort-package-json",
    "test": "vitest",
    "type-check": "tsc --noEmit"
  },
  "prettier": {
    "semi": false
  },
  "devDependencies": {
    "@eslint/js": "^9.24.0",
    "@size-limit/preset-small-lib": "^11.2.0",
    "@tsconfig/recommended": "^1.0.8",
    "eslint": "^9.24.0",
    "eslint-config-prettier": "^10.1.2",
    "globals": "^16.0.0",
    "prettier": "^3.5.3",
    "size-limit": "^11.2.0",
    "sort-package-json": "^3.0.0",
    "tsup": "^8.4.0",
    "typescript": "^5.8.3",
    "typescript-eslint": "^8.29.1",
    "vitest": "^3.1.1"
  },
  "packageManager": "pnpm@10.8.0",
  "engines": {
    "node": ">=22"
  },
  "size-limit": [
    {
      "path": "dist/index.js",
      "limit": "1.5 KB"
    }
  ],
  "tsup": {
    "entry": [
      "src/index.ts"
    ],
    "format": [
      "esm",
      "cjs"
    ],
    "dts": true,
    "clean": true,
    "sourcemap": true,
    "ignore": [
      "__tests__/**"
    ]
  }
}
